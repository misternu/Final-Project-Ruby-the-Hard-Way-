<div class="room_wrapper">

<h1> <%= room.name %> </h1>

<pre>
  <%= room.description %>
</pre>

<% if room.name == "death" || room.name == "The End" %>
  <p><a href="/">Play Again?</a></p>
<% else %>
  <p>
    <form action="/game" method="POST">
      <input type="text" name="action" autofocus>
    </form>
  </p>
<% end %>

</div>